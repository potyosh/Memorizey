<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="yoshi.memorizey.MainActivity"
    android:id="@+id/text">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Next"
        android:id="@+id/nextButton"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/questionText"
        android:layout_toRightOf="@+id/questionText"
        android:layout_toEndOf="@+id/questionText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/questionText"
        android:layout_marginTop="162dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        android:id="@+id/prevButton"
        android:layout_alignTop="@+id/nextButton"
        android:layout_toLeftOf="@+id/questionText"
        android:layout_toStartOf="@+id/questionText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flip"
        android:id="@+id/flipButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/nextButton"
        android:layout_alignEnd="@+id/nextButton"
        android:layout_alignLeft="@+id/prevButton"
        android:layout_alignStart="@+id/prevButton" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memorized!!"
        android:id="@+id/memorizedCheckBox"
        android:layout_below="@+id/questionText"
        android:layout_toRightOf="@+id/nextButton"
        android:layout_toEndOf="@+id/nextButton" />
</RelativeLayout>
